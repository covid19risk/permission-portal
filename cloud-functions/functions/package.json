{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "init": "cpy ../../config/ config/ && cpy --no-overwrite config/firebase.config.local.template config --rename=firebase.config.local.js",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --forceExit",
    "test:dev": "NODE_ENV=dev npm run test",
    "test:local": "NODE_ENV=local npm run test"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "cpy-cli": "^3.1.1",
    "dotenv": "^8.2.0",
    "firebase": "^7.14.2",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "jest-environment-uint8array": "^1.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^13.13.4",
    "firebase-functions-test": "^0.2.0",
    "jest": "^24.0.0",
    "node-env-run": "^3.0.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.0",
    "typescript": "^3.8.3"
  },
  "private": true
}
